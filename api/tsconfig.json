{
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "paths": {
      "@/tests/*": ["../tests/*"],
      "@/*": ["./src"]
    }
  },
  "exclude": ["node_modules", "dist", "coverage"]
}
